{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES6",
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "docs",
    "dist",
    "node_modules"
  ]
}
